<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/button_resume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_gray_background"
        android:onClick="onClick"
        android:text="Resume"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_restart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_resume"
        android:background="@drawable/border_light_blue_background"
        android:onClick="onClick"
        android:text="Restart"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_restart"
        android:background="@drawable/border_gray_background"
        android:onClick="onClick"
        android:text="Settings"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_settings"
        android:background="@drawable/border_light_blue_background"
        android:onClick="onClick"
        android:text="Quit"
        android:textSize="20sp" />

</RelativeLayout>
